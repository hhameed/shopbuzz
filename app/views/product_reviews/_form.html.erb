<%= simple_form_for ([@product, @product_review]), defaults: { input_html: { class: 'form-control' } }  do |f| %>

    <div class="form-group">
      <%= f.input :name, error: 'Username is mandatory, please specify one'%>
    </div>

    <div class="form-group" >
      <%= f.input :email, placeholder: 'user@domain.com' %>
    </div>

    <div class="form-group">
      <%= f.input :rating, collection: 1..5, prompt: "Please rate this product", selected: 3 %>
    </div>

    <%= f.input :content, as: :text, error: 'Content cannot be blank' %>
    <br>
    <%= recaptcha_tags %>
    <br>
    <div class="form-actions">
        <button type="submit" class="btn btn-default">Submit Your Comment</button>
    </div>

<%end%>