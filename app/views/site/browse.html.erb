<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <div style="margin-left: 10px; margin-bottom: 5px;">
        <h4>Price Range:</h4>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Min Price" style="width: 80%">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Max Price" style="width: 80%">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>


    <div class="thumbnail" style="margin-top:10px;">
      <div style="margin-left: 10px">
        <h4>Brands:</h4>
        <div class="checkbox">
          <label>
            <input type="checkbox"> Brand 1
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> Brand 2
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> Brand 3
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox"> Brand 4
          </label>
        </div>
      </div>
    </div>


    <div class="thumbnail" style="margin-top:10px;">
      <div style="margin-left: 10px">
        <h4>Brands:</h4>
        <% Brand.all.each do |brand| %>
        <div class="checkbox">
          <label>
            <input type="checkbox"> <%= brand.name %>
          </label>
        </div>
        <% end %>
      </div>
    </div>




  </div>
  <div class="col-md-9">
    <%= page_entries_info @products %>
    <div class="row">
      <%= render partial: @products, layout: "product_wrapper_layout", :locals => {size: "col-md-4", obj:"browse"} %>
    </div>
    <div class="row">
      <center><%= will_paginate @products %></center>
    </div>
  </div>
</div>