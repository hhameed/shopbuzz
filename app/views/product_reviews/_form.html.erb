<%= simple_form_for ([@product, @product_review]), defaults: { input_html: {class:'form-control'}}  do |f| %>

    <div class="row">

      <div class ="alert-danger"><%= f.error_notification %></div>

      <div class ="col-sm-12">
        <p class="help-block", style="color:red">Fields with <span class="required", style="color:black">*</span> are required.</p>
      </div>

      <div class = "form-group form-group-sm">
        <div class="col-sm-5">
          <%= f.input :name, label:'Name ', placeholder:'John Snow', type:'text', error: 'Username is mandatory, please specify one', input_html: { maxlength: 40 } %>
        </div>
      </div>

      <div class="form-group form-group-sm">
        <div class="col-sm-5">
          <%= f.input :email, label:'Email ', placeholder: 'John_snow@example.com', error: 'Email address is invalid' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :content, as: :text, error: 'Content cannot be blank', input_html: {rows: 10} %>
        </div>
      </div>

      <div class="form-group">
        <div class ="col-sm-10">
          <%= f.input :rating, label:false, input_html: {class: 'rating', min: 0, max: 5, step:1, 'data-size'=> 'sm'} %>
        </div>
      </div>

      <div class ="col-sm-12">
        <%= recaptcha_tags %>
      </div>

      <br>
      </br>

      <div class="form-actions">
        <div class ="col-sm-12">
          <button type="submit" class="btn btn-default">Submit Your Comment</button>
        </div>
      </div>

    </div>

<%end%>