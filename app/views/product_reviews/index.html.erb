<p id="notice"><%= notice %></p>

<h1>
  <%= "Customer Comments" %>
</h1>

<%= button_to 'Back to Products', product_path(@product), :method=>:get%>


<div class="row">
  <% (1..12).each do |i| %>
      <div class="col-md-3" style="margin-top:10px;" itemscope itemtype="http://schema.org/Product">
        <% @product_reviews..each do |product_review| %>
        <% end %>
      </div>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_reviews.each do |product_review| %>
      <tr>
        <td><%= link_to 'Edit', edit_product_product_review_path(product_review.product, product_review) %></td>
        <td><%= link_to 'Delete', [product_review.product, product_review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
