<div class="row">
  <div class="col-md-3">
    <form id="formid" action="<%= url_for controller: 'site', action: 'browse', category_id: @category.id %>" method="post">
      <%= select_tag(:sortid,options_for_select([['Sort Price Min-Max', 1], ['Sort Price Max-Min', 2]],@sortvalue)) %>
      <div class="thumbnail">
      <div style="margin-left: 10px; margin-bottom: 5px;">
        <h4>Price Range:</h4>
        <div class="form-group">
          <%= text_field_tag('textmin',@textminvalue, placeholder:"Min Price",class:"form-control",style:"width: 80%") %>
        </div>
        <div class="form-group">
          <%= text_field_tag('textmax',@textmaxvalue,placeholder:"Max Price",class:"form-control",style:"width: 80%") %>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>

    <div class="thumbnail" style="margin-top:10px;">
      <div style="margin-left: 10px">
        <h4>Brands:</h4>
        <% Brand.all.each do |brand| %>
        <div class="checkbox">
          <label>
            <%= check_box_tag "brand_ids[]",brand.id,@selected_brands.include?(brand.id.to_s), class:"ckbox" %>
            <%= brand.name%>
            <%= token_tag(nil) %>
          </label>
        </div>
        <% end %>
      </div>
    </div>
    </form>
  </div>

  <div class="col-md-9">
    <%= page_entries_info @products %>
    <div class="row">
      <%= render partial: "products/product", collection: @products, layout: "product_wrapper_layout",:locals => {:size => "col-md-4"} %>
    </div>
    <div class="row">
      <center><%= will_paginate @products %></center>
    </div>
  </div>

</div>